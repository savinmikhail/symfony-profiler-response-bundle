{
  "name": "savinmikhail/symfony-profiler-response-bundle",
  "description": "Symfony Web Profiler panel to display JSON/text response bodies with size limits and guards (dev-only)",
  "license": "MIT",
  "type": "symfony-bundle",
  "keywords": [
    "profiling",
    "debug",
    "dev"
  ],
  "authors": [
    {
      "name": "Savin Mikhail",
      "email": "mikhail.d.savin@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "symfony/config": "^5.4 || ^6.0 || ^7.0",
    "symfony/dependency-injection": "^5.4 || ^6.0 || ^7.0",
    "symfony/http-foundation": "^5.4 || ^6.0 || ^7.0",
    "symfony/http-kernel": "^5.4 || ^6.0 || ^7.0",
    "symfony/yaml": "^5.4 || ^6.0 || ^7.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "ergebnis/composer-normalize": "^2.48",
    "symfony/framework-bundle": "^5.4 || ^6.0 || ^7.0",
    "symfony/routing": "^5.4 || ^6.0 || ^7.0",
    "symfony/web-profiler-bundle": "^5.4 || ^6.0 || ^7.0"
  },
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "SavinMikhail\\ResponseProfilerBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true,
      "ergebnis/composer-normalize": true
    },
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": true,
      "forward-command": true,
      "target-directory": "vendor-bin"
    },
    "symfony": {
      "bundle": {
        "SavinMikhail\\ResponseProfilerBundle\\ResponseProfilerBundle": {
          "when@dev": true
        }
      },
      "copy-from-package": {
        "config/packages/response_profiler.yaml": "%CONFIG_DIR%/packages/response_profiler.yaml"
      }
    }
  }
}
